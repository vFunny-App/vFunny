<resources>
    <!-- Base application theme. -->
    <style name="Theme.Exoviewpagerfun" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#512DA8</item>
        <item name="colorPrimaryVariant">#4A148C</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#00897B</item>
        <item name="colorSecondaryVariant">#006064</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">@drawable/background</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Exoviewpagerfun.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Exoviewpagerfun.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Exoviewpagerfun.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>